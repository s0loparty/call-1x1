call.playerinlife.ru {
    root * /var/www/html/public
    encode zstd gzip

    # Reverb
		@reverb {
				path /app/* /apps/*
		}
    reverse_proxy @reverb reverb:8080

    # LiveKit
		@livekit {
				path /livekit*
				uri strip_prefix /livekit
		}
		reverse_proxy @livekit livekit:7881

    #handle_path /livekit* {
    #    uri strip_prefix /livekit
    #    reverse_proxy livekit:7881
    #}

    # TURN
		@turn {
			path /turn*
		}
    reverse_proxy @turn turn:3478

    # PHP-FPM (Laravel application)
    #handle {
		php_server
		file_server
    #}
}
