call.playerinlife.ru {

  # Reverb WebSocket
  reverse_proxy /app/* reverb:8080 {
    header_up Host {host}
    header_up X-Forwarded-Proto {scheme}
  }

  # Laravel app
  reverse_proxy app:9000 {
    header_up Host {host}
    header_up X-Forwarded-Proto {scheme}
  }
}
