call1x1.playerinlife.ru {

    root * /var/www/html/public
    encode zstd gzip

    # Reverb
    handle_path /app/* {
        reverse_proxy reverb:8080
    }
    handle_path /apps/* {
        reverse_proxy reverb:8080
    }

    # LiveKit
    handle_path /livekit* {
        uri strip_prefix /livekit
        reverse_proxy livekit:7881
    }

    # TURN
    handle_path /turn {
        reverse_proxy turn:3478
    }

    # PHP-FPM (Laravel application)
    handle {
        php_server
				file_server
    }
}
